{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
    <h1>Recettes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Allergene</th>
                <th>Regime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom}}</td>
                <td>{{ patient.allergene}}</td>
                <td>{{ patient.regime }}</td>
                <td>
                    <a href="{{ path('app_recettes_show', {'id': patients.id}) }}">show</a>
                    <a href="{{ path('app_recettes_edit', {'id': patients.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patients_new') }}">Create new</a>
{% endblock %}