{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
  .liste-utilisateurs{
    
    margin-top: 20px;
    margin-left: 40vw; 
  }

</style>

<div style="color: green;">
  {% for reg in regime %}

    {{ reg.name}}
    {{ reg.recettes}}
  
{% endfor %}
</div>



{% for user in users %}
<div class="liste-utilisateurs">
    {{ user.prenom}}
    {% for role in user.roles %}

       {% if role == "ROLE_USER" %}
        <strong class="role">patient</strong>

         {% elseif role == "ROLE_ADMIN" %}
         <strong class="role">administrateur</strong>

       {% endif %}
    {% endfor %}
 </div>
   
    

{% endfor %}
{% endblock %}